{
  "openapi": "3.0.3",
  "info": {
    "title": "API Fastify",
    "description": "API exemplo utilizando Fastify com TypeScript",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/api/users/": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Cria um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Nome completo do usuário",
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 100
                  },
                  "email": {
                    "description": "Email do usuário",
                    "type": "string"
                  },
                  "password": {
                    "description": "Senha do usuário",
                    "type": "string",
                    "minLength": 6
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "description": "ID único do usuário",
                          "type": "string"
                        },
                        "name": {
                          "description": "Nome completo do usuário",
                          "type": "string"
                        },
                        "email": {
                          "description": "Email do usuário",
                          "type": "string"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "email"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "user"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "description": "Mensagem de erro",
                      "type": "string"
                    },
                    "message": {
                      "description": "Detalhes do erro",
                      "type": "string"
                    },
                    "statusCode": {
                      "description": "Código de status HTTP",
                      "type": "number"
                    }
                  },
                  "required": [
                    "error"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "500": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "description": "Mensagem de erro",
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  }
}